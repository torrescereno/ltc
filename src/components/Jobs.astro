---
interface Props {
    title: string;
    date: string;
    company: string;
    description: string;
}

const { title, date, company, description } = Astro.props;
---

<div class="pt-4">
    <p class="font-semibold text-lg">{title}</p>
    <p class="italic">{company}, {date}</p>
    <p class="mt-2">{description}</p>
</div>
